@model IQueryable<Biuro_Podrozy.Models.Photo> 
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Zdjęcia</h1>
<table class="table table-striped">
    <tr>
        <th scope="col">Zdjęcie:</th>

        <th scope="col">Nazwa:</th>
        <th scope="col">Operacje</th>
    </tr>
    @foreach (var item in @Model)
    {
        <tr>
            <td>
                <img src="../img/@item.PhotoName" class="img-fluid rounded-start h-100" alt="@item.PhotoName">
            </td>
            <td> @item.PhotoName</td>

            <td>
                <a asp-controller="Biuro"
                   asp-action="Delete"
                   asp-route-id="@item.PhotoId"
                   class="btn btn-danger">Usuń</a>
            </td>
        </tr>
    }
</table>
