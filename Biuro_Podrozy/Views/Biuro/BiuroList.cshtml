@model List<Biuro_Podrozy.Models.BiuroItem>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Dostępne podróże</h1>


@foreach (var item in @Model)
{
    <div class="card mb-2 d-flex">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="../img/@item.Photos.PhotoName" class="img-fluid rounded-start h-100" alt="@item.Photos.PhotoName">
            </div>
            <div class="col-md-5">
                <div class="card-body">
                    <h5 class="card-title">@item.TravelPlace</h5>
                    <p class="card-text"><b>Data i godzina wylotu:</b> @item.TravelDate</p>
                    <p class="card-text"><b>Miejsca:</b> @item.Seats</p>
                    <p class="card-text">
                        <small class="text-muted">
                            Wylot z:
                            @foreach (var x in @item.DepartureCities)
                            {
                                <span>@x.CityName</span>
                            }
                        </small>
                    </p>
                    <p class="card-text"><b>Cena:</b> @item.Price/os</p>
                </div>
                <div class="col-md-3">
                    <a class="btn btn-primary" asp-action="BookInfo" asp-controller="Biuro" asp-route-id="@item.Id">
                        Zarezerwuj
                    </a>
                </div>
                <p></p>
            </div>
        </div>
    </div>
}
