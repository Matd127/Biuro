@foreach (var item in @Model)
{
    <div class="card mb-2 d-flex">
        <div class="row g-0">
            <div class="col-md-4" >
                <img src="..." class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-4">
                <div class="card-body">
                    <h5 class="card-title">@item.TravelPlace</h5>
                    <p class="card-text"><b>Data i godzina wylotu:</b> @item.TravelDate</p>
                    <p class="card-text"><b>Miejsca:</b> @item.Seats</p>
                    <p class="card-text"><small class="text-muted">
                        Wylot z:
                        @foreach (var x in @item.DepartureCities)
                         {
                            <span>@x.CityName </span>
                         }
                    </small></p>
                    <p class="card-text"><b>Cena:</b> @item.Price/os</p>
                </div>
                <div class="col-md-4">
                    <a class="btn btn-primary">Zarezerwuj</a>
                </div>
                <p></p>
            </div>
        </div>
    </div>
}
