@{
    
}

<div class="container-fluid m-md-2 w-50">
    <h2>Posimy o podanie danych do rezerwacji</h2>
    <form method="post" asp-action="BookF" asp-controller="Biuro">
        <div class="mb-2">
            <label>Imię:</label>
            <span asp-validation-for="First_Name" class="text-danger"></span>
            <input class="form-control" asp-for="First_Name" />
        </div>
        <div class="mb-2">
            <label>Nazwisko:</label>
            <span asp-validation-for="Surname" class="text-danger"></span>
            <input class="form-control" asp-for="Surname" />
        </div>

        <div class="mb-2">
            <label>Ilość miejsc (0-12):</label>
            <span asp-validation-for="Seats" class="text-danger"></span>
            <input type="number" class="form-control" asp-for="Seats" />
        </div>

        <div class="mb-2">
            <label>E-mail:</label>
            <span asp-validation-for="Email" class="text-danger"></span>
            <input class="form-control" asp-for="Email" />
        </div>

        <div class="mb-2">
            <label>Adres:</label>
            <span asp-validation-for="Address" class="text-danger"></span>
            <input class="form-control" asp-for="Address" />
        </div>

        <div class="mb-2">
            <label>Kod pocztowy:</label>
            <span asp-validation-for="PostalCode" class="text-danger"></span>
            <input class="form-control" asp-for="PostalCode" />
        </div>

        <div class="mb-2">
            <label>Miasto:</label>
            <span asp-validation-for="City" class="text-danger"></span>
            <input class="form-control" asp-for="City" />
        </div>

        <div class="mb-2">
            <label>Numer Telefonu:</label>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            <input class="form-control" asp-for="PhoneNumber" />
        </div>

        <div class="mb-2">
            <label>Data urodzenia:</label>
            <span asp-validation-for="DateofBirth" class="text-danger"></span>
            <input class="form-control" asp-for="DateofBirth" />
        </div>

        <button class="btn btn-primary" type="submit">Prześlij dane</button>
    </form>

</div>