@model Biuro_Podrozy.Models.LoginModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Logowanie";
}

<div class="text-danger" asp-validation-summary="All"></div>

<div class="border rounded w-25 p-3 d-flex justify-content-center align-items-center">
    <form asp-action="Login" asp-controller="Account" method="post">
        <input type="hidden" asp-for="ReturnUrl" />
        <div class="form-group">
            <label asp-for="Name">Nazwa użytkownika</label>
            <div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Hasło</label>
            <div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <input asp-for="Password" class="form-control" />
        </div>
        <button class="btn btn-primary" type="submit">Zaloguj</button>
    </form>
</div>